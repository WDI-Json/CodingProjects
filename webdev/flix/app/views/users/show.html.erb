<section class="user">
<% if current_user?(@user) %>
    <h1>Welcome, <%= @user.username %>!</h1>
  <% else %>
   <h1> <%= @user.username%>'s page</h1>
<% end %>
  <%= profile_image(@user) %>
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
  <h3>Member Since</h3>
  <p>
  <%= @user.created_at.strftime("%B %Y") %>
  </p>
  <% if current_user?(@user) %>
    <div class="actions">
      <%= link_to "Edit Account", edit_user_path(@user), class: "button edit" %>
      <% if current_user_admin? %>
      <%= link_to "Delete Account", @user, method: :delete, data: {confirm: "Are you sure? This can't be undone!"},
        class: "button delete" %>
    </div>
    <%end%>
  <% end %>
</section>